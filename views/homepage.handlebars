<!-- OUTER ACCORDION -->

<div class="accordian" id="accordionExample">
    {{#each posts as |post|}}
  <div class="card">
    <div class="card-header" id="headingOne">
      <h2 class="mb-0">
        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#post{{post.id}}" aria-expanded="true" aria-controls="collapseOne">
            {{post.title}}
        </button>
      </h2>
       <div class="meta">
            {{post.vote_count}} point(s) by {{post.user.username}} on
              {{post.created_at}}
              |
              <a href="#exampleModal{{post.id}}" data-toggle="modal" data-target="#exampleModal{{post.id}}">{{post.comments.length}} comment(s)</a>
          </div>
          <!-- Beginning Modal -->
          <div class="modal fade" id="exampleModal{{post.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{post.title}}</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
      </div>
      <div class="modal-body">
        <div id="post{{post.id}}" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
          <div class="card-body">
