<div class="row">
  <div class="columns">
    <ul class="accordion post-list" data-responsive-accordion-tabs="accordion medium-tabs large-accordion" data-allow-all-closed="true"> <!--3-15-->
      <li class="accordion-item is-active" data-accordion-item >
        <article class="post">
          <div class="title">
            <img src="{{post.post_url}}" target="_blank" class="accordion-title">{{post.title}}
            <div class="accordion-content" data-tab-content >
            <span>({{post.post_url}})</span>
          </div>
          <div class="meta">
            {{post.vote_count}} point(s) by {{post.user.username}} on
            {{post.created_at}}
            |
            <a href="/post/{{post.id}}" data-open="exampleModal2">{{post.comments.length}} comment(s)</a>
          </div>
        </article>
      </li>
    </ul>
  </div>
</div>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <a data-open="exampleModal2">add comment</a>
    <button type="button" class="upvote-btn">upvote</button>
  </div>
</form>
{{/if}}

<div class="reveal" id="exampleModal4" data-reveal>
  <div class="comments comment-section-container">
    {{#each post.comments}}
    <section class="comment">
      <div class="meta">
        {{user.username}} on {{created_at}}
      </div>
      <div class="comment-section-text">
        {{comment_text}}
      </div>
    </section>
    {{/each}}
  </div>
  <button class="close-button" data-close aria-label="Close reveal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}

